{% extends 'layout.twig' %}

{% block content %}

    <div class="row">
        <h2>All users</h2>
    </div>

    {% if users %}
        <div class="row">

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>User Name</th>
                        <th>Full Name</th>
                        <th>Email Address</th>
                        <th>Role</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.user_name }}</td>
                            <td>{{ user.full_name }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.role }}</td>
                            <td><a class="btn btn-info" href="{{ path_for('admin-users-show', {id: user.user_id}) }}">Show</a>
                                <a class="btn btn-success" href="{{ path_for('admin-users-edit', {id: user.user_id}) }}">Edit</a>
                                <a class="btn btn-danger" href="{{ path_for('admin-users-delete', {id: user.user_id}) }}">Delete</a></td>
                        </tr>
                    {% endfor %}

                </tbody>
            </table>

        </div>
        <a class="btn btn-danger" href="{{ path_for('admin-users-add')}}">New User</a>
    {% else %}
        <div class="row">
            <h5>No users found</h5>
        </div>
    {% endif %}    
{% endblock %}